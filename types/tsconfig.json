{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["DOM", "ES2020"],
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"types": [],
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"checkJs": true,
		"paths": {
			"colorjs.io": ["../src"],
			"colorjs.io/fn": ["../src/index-fn.js"],
			"colorjs.io/*": ["../*"]
		}
	}
}
