{
	"compilerOptions": {
		"target":"ES2018",
		"module": "commonjs",
		"lib": ["DOM", "ES2020"],
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"types": [],
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"colorjs.io": ["."],
			"colorjs.io/fn": ["./src/index-fn.js"],
			"colorjs.io/*": ["./*"]
		}
	}
}
