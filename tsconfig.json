{
	"compilerOptions": {
		"target":"ES2018",
		"checkJs": true,
		"lib": ["DOM", "ESNext"],
		"skipLibCheck": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"outDir": "types/src"
	},
	"include": ["src/**/*.js", "src/**/*.d.ts"],
	"exclude": ["node_modules/**"]
}
